<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout"
    android:background="@color/lightBlue"
    style="@style/AppTheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main.title"
        android:id="@+id/titleMainActivity"
        android:layout_marginTop="40dp"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Logo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.register"
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/titleMainActivity"
        android:layout_alignEnd="@+id/titleMainActivity"
        android:layout_alignLeft="@+id/titleMainActivity"
        android:layout_alignStart="@+id/titleMainActivity"
        android:onClick="onClickRegisterButton"
        android:background="@color/gray"
        android:textAllCaps="true"
        android:textSize="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.hasAccount"
        android:id="@+id/textView"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/buttonRegister"
        android:layout_alignLeft="@+id/buttonRegister"
        android:layout_alignStart="@+id/buttonRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.login"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/buttonRegister"
        android:layout_alignEnd="@+id/buttonRegister"
        android:paddingRight="20dp"
        android:onClick="onClickLoginButton"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.config.server.url"
        android:id="@+id/linkConfigServer"
        android:paddingRight="20dp"
        android:onClick="onClickConfigServer"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
